<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".upload.InforGoal">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:background="@drawable/header_nav_bg"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button_style"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_backk"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Mục tiêu"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Question Text -->
    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mục tiêu của bạn?"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Goals List -->
    <LinearLayout
        android:id="@+id/goalsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Goal 1: Giảm cân -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goalLoseWeightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_default_bg"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/iconLoseWeight"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lose_weight_placeholder"
                app:tint="#4B5563"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Icon giảm cân"/>

            <TextView
                android:id="@+id/textLoseWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tôi muốn giảm cân"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@id/iconLoseWeight"
                app:layout_constraintEnd_toStartOf="@id/checkboxLoseWeight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <CheckBox
                android:id="@+id/checkboxLoseWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="#A1A1AA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Goal 2: Tăng cân -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goalGainWeightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_default_bg"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/iconGainWeight"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lose_weight_placeholder"
                app:tint="#4B5563"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Icon tăng cân" />

            <TextView
                android:id="@+id/textGainWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tôi muốn tăng cân"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@id/iconGainWeight"
                app:layout_constraintEnd_toStartOf="@id/checkboxGainWeight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <CheckBox
                android:id="@+id/checkboxGainWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="#A1A1AA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Goal 3: Tăng sức bền -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goalIncreaseStrengthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_default_bg"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/iconIncreaseStrength"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_increase_strength_placeholder"
                app:tint="#4B5563"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Icon tăng sức bền"/>

            <TextView
                android:id="@+id/textIncreaseStrength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tôi muốn giữ dáng"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@id/iconIncreaseStrength"
                app:layout_constraintEnd_toStartOf="@id/checkboxIncreaseStrength"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <CheckBox
                android:id="@+id/checkboxIncreaseStrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="#A1A1AA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Goal 4: Thử ứng dụng -->

    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_orange_button_bg"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_arrow_forward"
        app:iconGravity="textEnd"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goalsContainer"
        app:layout_constraintVertical_bias="0.888" />

</androidx.constraintlayout.widget.ConstraintLayout>