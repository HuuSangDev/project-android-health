<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/header_nav_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="30dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button_style"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_backk"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Thêm bài tập"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tên bài tập -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutExerciseName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên bài tập"
                app:startIconTint="#FF6B6B"
                app:counterEnabled="true"
                app:counterMaxLength="100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etExerciseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Calo đốt cháy mỗi phút -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCaloriesPerMinute"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Calo đốt cháy/phút"
                app:startIconTint="#FF9800"
                app:helperText="VD: 10.5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCaloriesPerMinute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mô tả -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDescription"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Mô tả bài tập"
                app:startIconTint="#2196F3"
                app:counterEnabled="true"
                app:counterMaxLength="500">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="3"
                    android:maxLines="6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hướng dẫn thực hiện -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutInstructions"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Hướng dẫn thực hiện"
                app:startIconTint="#9C27B0"
                app:counterEnabled="true"
                app:counterMaxLength="1000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="4"
                    android:maxLines="8" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Độ khó -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDifficultyLevel"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Độ khó"
                app:startIconTint="#FF9800">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actvDifficultyLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Danh mục -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutCategory"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Danh mục"
                    app:startIconTint="#4CAF50">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/actvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="+"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Mục tiêu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutGoal"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Mục tiêu"
                app:startIconTint="#2196F3">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actvGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <!-- ====== ẢNH: CHỌN TỪ THIẾT BỊ ====== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hình ảnh bài tập"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImageUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_image"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chọn hình ảnh"
                                android:textColor="#111827"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvImageFileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Chưa có ảnh nào được chọn"
                                android:textColor="#9CA3AF"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectImage"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:backgroundTint="#EEF6FF"
                            android:text="Chọn từ thiết bị"
                            android:textAllCaps="false"
                            android:textColor="#2196F3"
                            android:textSize="13sp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_upload"
                            app:iconPadding="8dp"
                            app:iconSize="18dp"
                            app:iconTint="#2196F3"
                            app:strokeColor="#BBDEFB"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/layoutImagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivImagePreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnRemoveImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:layout_margin="10dp"
                            android:contentDescription="Xóa ảnh"
                            app:backgroundTint="#EF4444"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_delete"
                            app:tint="@android:color/white" />
                    </FrameLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== VIDEO: CHỌN TỪ THIẾT BỊ ====== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Video hướng dẫn"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVideoUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_video"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chọn video hướng dẫn"
                                android:textColor="#111827"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvVideoFileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Chưa có video nào được chọn"
                                android:textColor="#9CA3AF"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:backgroundTint="#FFF1F2"
                            android:text="Chọn từ thiết bị"
                            android:textAllCaps="false"
                            android:textColor="#F44336"
                            android:textSize="13sp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_upload"
                            app:iconPadding="8dp"
                            app:iconSize="18dp"
                            app:iconTint="#F44336"
                            app:strokeColor="#FFCDD2"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutVideoPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="#F9FAFB"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="60dp">

                            <ImageView
                                android:id="@+id/ivVideoThumbnail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#E5E7EB"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                app:tint="@android:color/white"
                                tools:ignore="ContentDescription" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvVideoDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thời lượng: --:--"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tvVideoSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Kích thước: -- MB"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRemoveVideo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="Xóa video"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_delete"
                            app:iconSize="18dp"
                            app:iconTint="#EF4444"
                            app:strokeColor="#FCA5A5"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Button lưu -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:backgroundTint="#4CAF50"
        android:paddingVertical="12dp"
        android:text="Lưu bài tập"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_save"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white" />

</LinearLayout>
